{
  "name": "swiftlogistics-backend",
  "version": "1.0.0",
  "description": "SwiftLogistics Backend Microservices",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run start:auth\" \"npm run start:order\"",
    "start:auth": "cd services/auth-service && npm start",
    "start:order": "cd services/order-service && npm start",
    "start:tracking": "cd services/tracking-service && npm start",
    "start:all": "concurrently \"npm run start:auth\" \"npm run start:order\" \"npm run start:tracking\"",
    "kafka:up": "cd backend/kafka && docker-compose up -d",
    "kafka:down": "cd backend/kafka && docker-compose down"
  },
  "keywords": ["logistics", "microservices", "kafka"],
  "author": "SwiftLogistics Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}